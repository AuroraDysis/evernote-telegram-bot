{
	"debug": "${EVERNOTEBOT_DEBUG}",
	"host": "evernotebot.djudman.info",
	"telegram": {
		"bot_url": "http://telegram.me/evernoterobot",
		"token": "${TELEGRAM_API_TOKEN}",
		"webhook_url": "https://evernotebot.djudman.info/${TELEGRAM_API_TOKEN}"
	},
	"evernote": {
		"oauth_callback_url": "https://evernotebot.djudman.info/evernote/oauth",
		"access": {
			"basic": {
				"key": "${EVERNOTE_BASIC_ACCESS_KEY}",
				"secret": "${EVERNOTE_BASIC_ACCESS_SECRET}"
			},
			"full": {
				"key": "${EVERNOTE_FULL_ACCESS_KEY}",
				"secret": "${EVERNOTE_FULL_ACCESS_SECRET}"
			}
		}
	},
	"storage": {
		"users": {
			"class": "evernotebot.bot.storage.Mongo",
			"connection_string": "mongodb://${MONGO_HOST}:27017/",
			"db_name": "evernotebot",
			"collection": "users"
		},
		"failed_updates": {
			"class": "evernotebot.bot.storage.Mongo",
			"connection_string": "mongodb://${MONGO_HOST}:27017/",
			"db_name": "evernotebot",
			"collection": "failed_updates"
		}
	},
	"src_root": "./evernotebot",
	"tmp_root": "./tmp",
	"logs_root": "./logs",
	"logging": {
		"version": 1,
		"disable_existing_loggers": false,
		"formatters": {
			"json": {
				"class": "evernotebot.config.JsonFormatter"
			}
		},
		"handlers": {
			"stdout": {
				"class": "logging.StreamHandler",
				"stream": "stdout",
				"formatter": "json"
			},
			"evernotebot": {
				"class": "logging.handlers.RotatingFileHandler",
				"filename": "./logs/evernotebot.log",
				"maxBytes": 10485760,
				"backupCount": 1,
				"formatter": "json"
			}
		},
		"loggers": {
			"uhttp": {
				"handlers": ["evernotebot"],
				"level": "DEBUG",
				"propagate": false
			},
			"utelegram": {
				"handlers": ["evernotebot"],
				"level": "DEBUG",
				"propagate": false
			},
			"evernotebot": {
				"handlers": ["evernotebot"],
				"level": "DEBUG",
				"propagate": false
			}
		}
	}
}
